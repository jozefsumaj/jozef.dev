---
import StatsBadges from './StatsBadges.astro';
const currentYear = new Date().getFullYear();
---

<footer 
  class="w-full border-t mt-auto"
  style="border-color: var(--border);"
>
  <div class="max-w-3xl mx-auto px-6 py-8 space-y-4">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm font-mono" style="color: var(--text-muted);">
      <span>last incident: ████████ <span style="color: var(--text-muted);">[REDACTED]</span></span>
      <div class="flex items-center gap-4">
        <span>© {currentYear}</span>
        <a 
          href="/rss.xml" 
          class="hover:opacity-100 opacity-70 transition-opacity"
          style="color: var(--text-secondary);"
        >
          rss
        </a>
      </div>
    </div>
    <div class="flex justify-center sm:justify-start">
      <StatsBadges />
    </div>
  </div>
</footer>
